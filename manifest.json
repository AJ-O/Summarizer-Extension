{

	"manifest_version" : 2,
	"name" : "Article Summarizer",
	"version" : "1.0",

	"description" : "Simply gives you the summary of your current article and you can contain the number of lines too!",

	"content_scripts": [
		{
			"matches" : ["<all_urls>"],
			"run_at" : "document_end"
		}
	],

	"browser_action" : {
		"default_title" : "test",
		"default_popup" : "popup.html"
	},


	"permissions" : [

 		"<all_urls>",
		"webRequest",
		"webRequestBlocking",
		"tabs"
  	]

}
